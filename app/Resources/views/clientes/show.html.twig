{% extends 'base.html.twig' %}

{% block body %}
    <h1>Clientes</h1>

    <table>
        <tbody>
            <tr>
                <th>Nombrecliente</th>
                <td>{{ cliente.nombrecliente }}</td>
            </tr>
            <tr>
                <th>Rif</th>
                <td>{{ cliente.rif }}</td>
            </tr>
            <tr>
                <th>Tipocliente</th>
                <td>{{ cliente.tipocliente }}</td>
            </tr>
            <tr>
                <th>Telefonocliente</th>
                <td>{{ cliente.telefonocliente }}</td>
            </tr>
            <tr>
                <th>Direccioncliente</th>
                <td>{{ cliente.direccioncliente }}</td>
            </tr>
            <tr>
                <th>Contactocliente</th>
                <td>{{ cliente.contactocliente }}</td>
            </tr>
            <tr>
                <th>Idclientes</th>
                <td>{{ cliente.idclientes }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('clientes_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('clientes_edit', { 'id': cliente.idclientes }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
