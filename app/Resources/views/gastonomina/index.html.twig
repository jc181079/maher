{% extends 'base.html.twig' %}
{% use "::navbar.html.twig" %}
{% block body %}
    {% block navbar %}
        {{ parent() }}
    {% endblock %}
     <div class="jumbotron">
        <div class="container">
            <h1><strong>.:Modulo de administracion de GASTOS DE NOMINA</strong></h1>
            <p>aqui podra administrar los diferentes gatos de nomina de la empresa</p>
            <footer>
                <a class="btn btn-default" href="{{ path('gastonomina_new') }}">Ingresar nuevo registro</a>
            </footer>
        </div>
     </div>
     {% if app.session.flashbag.get('Mensaje') %}      
         {% for flashMessage in app.session.flashbag.get('Mensaje') %}
             <div class="alert alert-success" role="alert">
                 <span class="glyphicon glyphicon-warning-sign" ></span> 
                 {{flashMessage}}...
             </div>
         {% endfor%}
     {% endif%}
     {% if app.session.flashbag.get('Alerta') %}      
         {% for flashMessage in app.session.flashbag.get('Alerta') %}
             <div class="alert alert-danger" role="alert">
                 <span class="glyphicon glyphicon-warning-sign" ></span> 
                 {{flashMessage}}...
             </div>
         {% endfor%}
     {% endif%}
<div class="container">
         <table class="table table-bordered table-responsive">
        <thead>
            <tr>
                <th>Conceptogastonomina</th>
                <th>Montogastonomina</th>
                <th>Idgastonomina</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for gastonomina in gastonominas %}
            <tr>
                <td><a href="{{ path('gastonomina_show', { 'id': gastonomina.idgastonomina }) }}">{{ gastonomina.conceptogastonomina }}</a></td>
                <td>{{ gastonomina.montogastonomina }}</td>
                <td>{{ gastonomina.idgastonomina }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('gastonomina_show', { 'id': gastonomina.idgastonomina }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('gastonomina_edit', { 'id': gastonomina.idgastonomina }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('gastonomina_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
