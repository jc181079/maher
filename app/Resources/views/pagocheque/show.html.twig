{% extends 'base.html.twig' %}

{% block body %}
    <h1>Pagocheque</h1>

    <table>
        <tbody>
            <tr>
                <th>Fechapago</th>
                <td>{% if pagocheque.fechapago %}{{ pagocheque.fechapago|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Estatuspagocheque</th>
                <td>{{ pagocheque.estatuspagocheque }}</td>
            </tr>
            <tr>
                <th>Observacionpagocheque</th>
                <td>{{ pagocheque.observacionpagocheque }}</td>
            </tr>
            <tr>
                <th>Idpagocheque</th>
                <td>{{ pagocheque.idpagocheque }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('pagocheque_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('pagocheque_edit', { 'id': pagocheque.idpagocheque }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
