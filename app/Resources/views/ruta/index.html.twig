{% extends 'base.html.twig' %}
{% use "::navbar.html.twig" %}
{% block body %}
    {% block navbar %}
        {{ parent() }}
    {% endblock %}
     <div class="jumbotron">
        <div class="container">
            <h1><strong>.:Modulo de administracion de RUTAS</strong></h1>
            <p>aqui podra administrar las diferentes rutas en las cuales se encuentran los clientes de la empresa</p>
            <footer>
                <a class="btn btn-default" href="{{ path('ruta_new') }}">Ingresar nuevo registro</a>
            </footer>
        </div>
     </div>
     {% if app.session.flashbag.get('Mensaje') %}      
         {% for flashMessage in app.session.flashbag.get('Mensaje') %}
             <div class="alert alert-success" role="alert">
                 <span class="glyphicon glyphicon-warning-sign" ></span> 
                 {{flashMessage}}...
             </div>
         {% endfor%}
     {% endif%}
     {% if app.session.flashbag.get('Alerta') %}      
         {% for flashMessage in app.session.flashbag.get('Alerta') %}
             <div class="alert alert-danger" role="alert">
                 <span class="glyphicon glyphicon-warning-sign" ></span> 
                 {{flashMessage}}...
             </div>
         {% endfor%}
     {% endif%}
<div class="container">
         <table class="table table-bordered table-responsive">
        <thead>
            <tr>
                <th>Nombreruta</th>
                <th>Detalleruta</th>
                <th>Idruta</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% if rutas %}
                {% for rutum in rutas %}
                    <tr>
                        <td><a href="{{ path('ruta_show', { 'id': rutum.idruta }) }}">{{ rutum.nombreruta }}</a></td>
                        <td>{{ rutum.detalleruta }}</td>
                        <td>{{ rutum.idruta }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('ruta_show', { 'id': rutum.idruta }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('ruta_edit', { 'id': rutum.idruta }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr >
                    <td colspan="7"><div class="alert alert-danger" role="alert"><span class="glyphicon glyphicon-exclamation-sign"></span> No hay regiastros en este modulo por los momentos..</div></td>
                </tr>
            {% endif%}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('ruta_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
