    <field name="valor" type="integer" column="valor" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="comment">cantidad de la unidad, ej. caja = 36</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
